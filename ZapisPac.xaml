        <Label Content="Wybierz badanie:" HorizontalAlignment="Left" Margin="18,38,0,0" VerticalAlignment="Top" Width="112"/>
        <Label Content="Wybierz pielęgniarnkę:" HorizontalAlignment="Left" Margin="17,98,0,0" VerticalAlignment="Top"/>
        <Label Content="Wybierz datę:" HorizontalAlignment="Left" Margin="217,16,0,0" VerticalAlignment="Top"/>
        <Calendar x:Name="DataBadania" HorizontalAlignment="Left" Margin="205,50,0,0" VerticalAlignment="Top" SelectedDatesChanged="DataBadania_SelectedDatesChanged"/>
        <ComboBox x:Name="cbxGodzina" HorizontalAlignment="Left" Margin="18,184,0,0" VerticalAlignment="Top" Width="150" SelectionChanged="cbxGodzina_SelectionChanged" SelectedIndex="0"/>
        <Label Content="Wybierz godzinę:" HorizontalAlignment="Left" Margin="18,158,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
