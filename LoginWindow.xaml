<Window x:Class="Panel_Gościa.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel_Gościa"
        mc:Ignorable="d" BorderThickness="5" BorderBrush="#e1f5fe"
        Title="Login" Height="250" Width="200" 
        WindowStyle="None" ResizeMode="NoResize"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="#e1f5fe"
            MouseDown="Grid_MouseDown" 
           />
        <TextBox x:Name="txtLogin" 
                 HorizontalAlignment="Center" Height="24" 
                 VerticalAlignment="Center" Width="120" 
                 Margin="37,10,33,10"
                 Grid.Row="2" TextChanged="txtLogin_TextChanged" TextAlignment="Center">
            
        </TextBox>
        <PasswordBox x:Name="txtPassword" 
                 HorizontalAlignment="Left" 
                 Height="23"  
                 VerticalAlignment="Center" 
                 Width="120" Margin="37,10,0,11"
                 Grid.Row="4" PasswordChanged="txtPassword_PasswordChanged" HorizontalContentAlignment="Center">
            
        </PasswordBox>

        <Button x:Name="btnLogin" Content="Zaloguj"
                Width="100" 
                Click="btnLogin_Click" 
                Height="30" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Grid.Row="5">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="#49a7cc"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="#b5ffff"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="100" Height="25"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Content="X" x:Name="btnClose"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Width="25" Height="22"
                FontSize="16" 
                Foreground="black" FontWeight="Bold"
                
                Click="btnClose_Click" 
                Grid.Column="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" >
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="#49a7cc"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border 
                                
                                Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
