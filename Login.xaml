<Window x:Class="Panel_Gościa.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel_Gościa"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="10,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblLogin" Content="Podaj login:" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" Width="85"/>
        <Label x:Name="lblHaslo" Content="Podaj hasło:" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Height="28" Width="85"/>
        <Button x:Name="btnLogin" Content="Zaloguj" HorizontalAlignment="Left" Margin="10,179,0,0" Width="75" Click="btnLogin_Click" Height="21" VerticalAlignment="Top"/>
        <Button x:Name="btnAnuluj" Content="Anuluj" HorizontalAlignment="Left" Margin="108,180,0,0" VerticalAlignment="Top" Width="75" Click="btnAnuluj_Click"/>

    </Grid>
</Window>
