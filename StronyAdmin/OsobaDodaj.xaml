        <TextBox x:Name="txtHasło" HorizontalAlignment="Left" Height="23" Margin="16,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <Button x:Name="btnDodajOsobe" Content="Dodaj nową osobę" HorizontalAlignment="Left" Margin="152,295,0,0" VerticalAlignment="Top" Width="117" Click="Button_Click"/>
