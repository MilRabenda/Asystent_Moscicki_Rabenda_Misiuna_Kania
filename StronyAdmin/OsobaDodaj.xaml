        <Label Content="Hasło:" HorizontalAlignment="Left" Margin="83,209,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox x:Name="cbRole" HorizontalAlignment="Left" Margin="245,235,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbRole_SelectionChanged"/>
        <Label Content="Rola:" HorizontalAlignment="Left" Margin="284,209,0,0" VerticalAlignment="Top"/>

    </Grid>
